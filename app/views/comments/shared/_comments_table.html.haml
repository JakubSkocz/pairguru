%div.container
  %table.table.table-striped.pt-5
    %tbody
      - comments.each_with_index do |comment, i|
        %tr
          %td= i + 1
          %td
            %h4
              Author: #{comment.user.email}
            %p
              %strong
                Raiting #{comment.rating}
            %p 
              Comment: #{comment.description}
          %td
            - if comment.user_id == current_user.id
              %p= link_to 'Destroy comment', comment_path(comment), method: :delete, class: 'btn btn-sm btn-default'